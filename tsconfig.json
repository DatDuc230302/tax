{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "components/CreateArticle/index.tsx",
        "app/api/CustomUploadAdapter.js",
        "components/CreateArticle/Upload.js",
        "app/api/upload.js",
        "components/Admin/CreatePost/index.js",
        "ckeditor5/src/Components/TextEditor.jsx",
        "components/Admin/CreatePost/index.jsx"
, "functions/removeDiacriticsAndSpaces.js", "components/Common/Ckeditor/index.js"    ],
    "exclude": ["node_modules"]
}
